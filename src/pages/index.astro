<script is:inline>
	const otherBtn = document.getElementById("otherBtn");
	const otherContent = document.getElementById("otherContent");
		
	if (!otherBtn || !otherContent) {
		throw new Error("Cannot find \"Other\" button or content");
	}
		
	otherBtn.addEventListener("click", () => {
		otherContent.classList.toggle("collapsed");
		otherBtn.classList.toggle("active");
	});
</script>

<style>
	.other-hidden {
		overflow:hidden;
		height: auto;
		transform: scaleY(1);
		transition: all 300ms;
		-webkit-transition: all 300ms;
		transform-origin: top;
		max-height: 100vh;
	}

	.other-hidden.collapsed {
		transform: scaleY(0);
		max-height: 0;
	}

	img {
		@apply rounded;
	}

	img.support-dark {
		@apply bg-white p-1;
	}

	.programming-languages-imgs img {
		@apply p-1;
	}

	.img {
		width: 35vw;
		border: 5px solid black;
		margin: auto;
	}

	.plus-btn {
		position: relative;
		width: 20px;
		height: 20px;
		right: 0;
	}

	.plus-btn span {
		@apply rounded bg-gradient-to-r from-primary2 to-secondary2;
		position: absolute;
		transition: 300ms;
	}

	.plus-btn-vertical {
		height: 20%;
		width: 100%;
		top: 50%;
		transform: translateY(-50%);
		left: 0%;
		right: 0;
	}

	.plus-btn-horizontal {
		height: 100%;
		width: 20%;
		top: 0%;
		transform: translateX(-50%);
		left: 50%;
		right: 0;
	}

	.plus-btn.active span {
		transform: rotate(90deg);
	}

	.plus-btn.active .plus-btn-vertical {
		opacity: 0;
	}
</style>
