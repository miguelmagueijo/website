<style>
	@keyframes show-details {
		from {
			opacity: 0;
			transform: translateY(-1rem);
		}
	}

	.otherArrow {
		display: inline-block;
		transition: transform 300ms;
	}

	details[open] svg {
		transform: rotate(90deg);
	}

	details[open] > *:not(summary) {
		animation: show-details 300ms linear;
	}

	img {
		@apply rounded;
	}

	img.support-dark {
		@apply bg-white p-1;
	}

	.programming-languages-imgs img {
		@apply p-1;
	}

	.img {
		width: 35vw;
		margin: auto;
	}

	.plus-btn {
		position: relative;
		width: 20px;
		height: 20px;
		right: 0;
	}

	.plus-btn span {
		@apply rounded;
		position: absolute;
		transition: 300ms;
	}

	.plus-btn-vertical {
		height: 20%;
		width: 100%;
		top: 50%;
		transform: translateY(-50%);
		left: 0%;
		right: 0;
	}

	.plus-btn-horizontal {
		height: 100%;
		width: 20%;
		top: 0%;
		transform: translateX(-50%);
		left: 50%;
		right: 0;
	}

	.plus-btn.active span {
		transform: rotate(90deg);
	}

	.plus-btn.active .plus-btn-vertical {
		opacity: 0;
	}
</style>
