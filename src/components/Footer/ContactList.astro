---
    import { Icons } from "../../svgs";
    import ContactLink from "./ContactLink.astro";
    import type { Props as ContactLinkProps } from "./ContactLink.astro";

    interface ExtContactLinkProps extends ContactLinkProps {
        icon: typeof Icons[keyof typeof Icons]
    }

    const links: Array<ExtContactLinkProps> = [
        {
            href: "https://www.linkedin.com/in/miguel-magueijo/",
            text: "/miguelmagueijo",
            title: "LinkedIn - Miguel Magueijo",
            icon: Icons.LinkedIn,
        },
        {
            href: "https://www.facebook.com/profile.php?id=100077211735856",
            text: "Miguel Magueijo",
            title: "Facebook - Miguel Magueijo",
            icon: Icons.Facebook,
        },
    ]
---

<ul class="leading-none grid grid-flow-col">
    { links.map((link) => 
        <ContactLink href={ link.href } text={ link.text } title={ link.title }>
            <link.icon class="fill-white w-[20px] h-[20px]" slot="icon" />
        </ContactLink>
    ) }
</ul>
